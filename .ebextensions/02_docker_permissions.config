commands:
  01_add_ec2_user_to_docker_group:
    command: "sudo usermod -aG docker ec2-user"
    ignoreErrors: true
  02_fix_docker_sock_permissions:
    command: "chmod 666 /var/run/docker.sock"
    ignoreErrors: true
  03_restart_docker:
    command: "service docker restart || systemctl restart docker"
    ignoreErrors: true 