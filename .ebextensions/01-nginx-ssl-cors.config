---
# 기본 Nginx CORS 및 SSL 설정
files:
  "/etc/nginx/conf.d/cors.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # CORS 설정
      add_header 'Access-Control-Allow-Origin' 'https://scentist.link' always;
      add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
      add_header 'Access-Control-Allow-Headers' '*' always;
      add_header 'Access-Control-Allow-Credentials' 'true' always;

  "/etc/nginx/conf.d/ssl.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # SSL 설정 (인증서가 있을 경우)
      server {
          listen 443 ssl;
          server_name api.scentist.link;

          # 인증서 경로 (인증서가 있는 경우)
          ssl_certificate /etc/letsencrypt/live/api.scentist.link/fullchain.pem;
          ssl_certificate_key /etc/letsencrypt/live/api.scentist.link/privkey.pem;

          # SSL 설정
          ssl_protocols TLSv1.2 TLSv1.3;
          ssl_prefer_server_ciphers on;

          # OPTIONS 요청 처리
          if ($request_method = 'OPTIONS') {
              return 204;
          }

          # 프록시 설정
          location / {
              proxy_pass http://localhost:5000;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
      }

container_commands:
  01_create_ssl_conf_dir:
    command: "mkdir -p /etc/nginx/conf.d"
    ignoreErrors: true

  02_reload_nginx_if_running:
    command: "if systemctl status nginx >/dev/null 2>&1; then systemctl reload nginx; fi"
    ignoreErrors: true